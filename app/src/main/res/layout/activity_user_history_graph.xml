<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserHistoryGraphPage">

    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/stacked_user_history_graph"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="45">

    </com.github.mikephil.charting.charts.CombinedChart>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="80"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="Selected Day's Details"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_weight="20"
            android:layout_marginBottom="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/selected_goal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Goal: " />

            <TextView
                android:id="@+id/selected_total_steps"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Total Steps: " />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/planned_walk_section"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="5dp"
        android:layout_weight="60"
        android:orientation="vertical">


        <TextView
            android:id="@+id/planned_walk_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planned Walk Information"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/day_of_week_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: " />

        <TextView
            android:id="@+id/Intentional_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intentional Steps: " />

        <TextView
            android:id="@+id/walk_dist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Walk Distance: " />

        <TextView
            android:id="@+id/walk_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Walk Time: " />

        <TextView
            android:id="@+id/avg_walk_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Walk Speed: " />


    </LinearLayout>


</LinearLayout>